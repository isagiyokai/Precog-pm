# Backend environment configuration for Precog

# Server
PORT=5000
NODE_ENV=development
CORS_ORIGIN=http://127.0.0.1:5173
BACKEND_URL=http://127.0.0.1:5000

# Solana
RPC_URL=https://api.devnet.solana.com
PROGRAM_ID=
WALLET_KEYPAIR_PATH=%USERPROFILE%/.config/solana/id.json
IDL_PATH=

# Arcium
ARCIUM_API_KEY=
ARCIUM_ENDPOINT=https://testnet.api.arcium.com
MXE_PROGRAM_ID=

# RPC selection
# Set USE_HELIUS=true to use Helius devnet with HELIUS_KEY; otherwise RPC_URL is used
USE_HELIUS=false
HELIUS_KEY=

# Tokens
# Optional USDC mint (devnet) to use when mint=USDC on bet route
USDC_MINT=
